{
  "name": "skiddys-project",
  "services": {
    "web": {
      "image": "local",
      "dockerfile": "./Dockerfile",
      "ports": {
        "8090": "http"
      },
      "env": {
        "NODE_ENV": "production"
      },
      "resources": {
        "memory": 512
      }
    },
    "frontend": {
      "type": "app",
      "image": "ghcr.io/rizo8107/skiddys-learning-platform-frontend",
      "domains": ["skiddytamil.in"],
      "env": {
        "VITE_API_URL": "https://skiddytamil.in"
      },
      "mounts": {
        "/etc/nginx/ssl": "ssl"
      }
    },
    "pocketbase": {
      "type": "app",
      "image": "ghcr.io/muchobien/pocketbase:latest",
      "domains": ["skiddytamil.in"],
      "path_prefix": "/api",
      "env": {},
      "mounts": {
        "/pb_data": "pb_data",
        "/pb_migrations": "pb_migrations",
        "/pb_hooks": "pb_hooks"
      },
      "port": 8090
    }
  }
}
